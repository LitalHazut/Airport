@model Airport.Client.Models.LiveUpdateViewModel

@{
    ViewData["Title"] = "SeeAllLiveUpdates";
}
<a class="btn btn-outline-info" asp-action="Index">Return Back</a>
<h1>Live Updates</h1>

<table class="table">

    <thead>
        <tr>
            @*  <th>
                @Html.DisplayNameFor(model => model.LiveUpdateId)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.LiveUpdateList.First().FlightId)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.LiveUpdateList.First().IsEntering)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.LiveUpdateList.First().StationNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LiveUpdateList.First().UpdateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LiveUpdateList)
        {
            <tr>
                @* <td>
                    @Html.DisplayFor(modelItem => item.LiveUpdateId)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.FlightId)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.IsEntering)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.StationNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateTime)
                </td>
            </tr>
        }
    </tbody>

</table>
<div class="d-flex justify-content-end">
    
        @if (!Model.IsFirstPage)
        {
        var nextPage1 = @Model.CurrentPage - 1;
        <a asp-action="SeeAllLiveUpdates" asp-route-pageNum="@nextPage1"> <i class="bi bi-arrow-left-circle"></i> </a>
        }
        @if (!Model.IsLastPage)
        {
        var nextPage2 = @Model.CurrentPage + 1;
        <a asp-action="SeeAllLiveUpdates" asp-route-pageNum="@nextPage2"><i class="bi bi-arrow-right-circle"></i></a>
        }
    


</div>
