@model IEnumerable<Airport.Data.Model.Station>

<script type="text/javascript">
    $("document").ready(function(){
        setInterval(function(){
        $.ajax({
            type: 'Get',
            url: '@Url.Action("LoadStations")',
            dataType:'json',
            contentType: "application/json;charset=utf-8",
            success: function(data){
                debugger;
                alert("success");
                $.each(data,function(key,item){
                   $('tbody').append('<tr>\
                <td>'+item.FlightId+'</td>\
                <td>'+item.StationNumber+'</td>\
            </tr>');
                });
            },
            error:function(reponse){
                debugger;
                alert('error');
            }
        });
        },5000);
    });
</script>
@{
    ViewData["Title"] = "GetAllStationsStatus";
}
<a class="btn btn-outline-info" asp-action="Index">Return Back</a>
<div>
    <h1>Get All Stations Status</h1>
    <a class="btn btn-outline-info" asp-action="AddNewFlight" asp-route-isAsc="true">Add New ASC Flight</a>
    <a class="btn btn-outline-info" asp-action="AddNewFlight" asp-route-isAsc="false"> Add New DESC Flight</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FlightId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StationNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FlightId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StationNumber)
                </td>
            </tr>
        }
    </tbody>
</table>
